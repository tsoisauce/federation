{
  "name": "federation",
  "version": "1.0.0",
  "description": "Federated microservice demo",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "install:all": "yarn workspaces foreach install",
    "gateway:start": "cd gateway && yarn start",
    "gateway:dev": "cd gateway && yarn dev",
    "gateway:dev:wait": "wait-on -v tcp:3001 && cd gateway && yarn dev",
    "users:start": "cd services/users && yarn start",
    "users:dev": "cd services/users && yarn start:dev",
    "dev:all": "concurrently -k -n \"users,gateway\" -c \"red,blue\" \"yarn users:dev\" \"yarn gateway:dev:wait\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.3"
  }
}
