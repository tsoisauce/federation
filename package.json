{
  "name": "federation",
  "version": "1.0.0",
  "description": "Microservice orchestration demo",
  "main": "index.js",
  "repository": "https://github.com/tsoisauce/federation.git",
  "author": "Kelvin Tsoi <tsoikelvin@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "gateway",
    "services/*"
  ],
  "scripts": {
    "commit": "npx cz",
    "start:users": "yarn workspace users-node start",
    "start:products": "cd services/products-ruby && bundle exec rails server",
    "start:collections": "cd services/collections-python && ./start.sh",
    "start:gateway": "wait-on http://localhost:3000/health http://localhost:3001/health http://localhost:3002/health && yarn workspace gateway start",
    "start": "concurrently -k \"yarn start:users\" \"yarn start:products\" \"yarn start:collections\" \"yarn start:gateway\"",
    "status": "./scripts/check-services.sh",
    "install:collections": "cd services/collections-python && ./setup_env.sh",
    "stop": "./stop-all.sh",
    "stop:collections": "cd services/collections-python && ./stop.sh"
  },
  "devDependencies": {
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "wait-on": "^8.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
